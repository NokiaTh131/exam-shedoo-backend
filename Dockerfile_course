FROM python:3.10-slim

WORKDIR /app

# คัดลอก requirements
COPY web-scraper/requirements.txt .

# ติดตั้ง Python packages
RUN pip install --no-cache-dir -r requirements.txt

# ติดตั้ง browsers ของ Playwright
RUN playwright install --with-deps chromium

# คัดลอกไฟล์ scraper
COPY web-scraper/course_scraper.py .

# รัน scraper ตอน container start
CMD ["python", "course_scraper.py"]